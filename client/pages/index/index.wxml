        <image class="avatar" src="{{item.avatarUrl}}"></image>
        <text class="nickName">{{item.nickName}}</text>
      </view>
      <view class="flex-item">
        <image class="avatar" src="{{item.avatarUrl}}"></image>
        <text class="nickName">{{item.nickName}}</text>
      </view>
      <view class="flex-item">
        <image class="avatar" src="{{item.avatarUrl}}"></image>
        <text class="nickName">{{item.nickName}}</text>
      </view>
      
    </view>
  </view>
</view>
<button wx:if="{{!isInGroup}}" class="bottomButton" type="primary" data-status='0' bindtap='joinGroup'>JOIN</button>
<button wx:else class="bottomButton" type="warn" data-status='1' bindtap='joinGroup'>LEAVE</button>
